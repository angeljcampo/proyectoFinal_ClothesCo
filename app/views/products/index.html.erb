<p id="notice"><%= notice %></p>

<% if current_user.present? %> 
<h1>Bienvenido  <%= current_user.name %></h1>
<div id="edit-profile">
<%= link_to "Editar perfil", edit_user_registration_path %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.image %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.subcategory.to_s %></td>
      <% if current_user.present? == true && current_user.admin == true %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.present? == true && current_user.admin == true %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-success " %>
  
  <% end %>
  
