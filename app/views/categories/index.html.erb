<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Categories</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <% if current_user.present? == true && current_user.admin == true %>
            <td><%= link_to 'Show', category, class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Category', new_category_path %>
</div>