<div class="card mt-5 container">
    <div class="card-header bg-dark text-light">
        
        <a href="<%= root_url%>" class="btn btn-outline-light btn-sm
        pull-right">Continua con tus compras</a>
    <div class="clearfix">
    </div>
</div>
    <div class="card-body">
        <% @order.carts.includes(:product).map do |item| %>
            <div class="row">
                <div class="col-xs-2 col-md-2">
                    <img class="img-responsive img-fluid"src="<%= item.product.image%>" alt="prewiew">
                </div>
                <div class="col-xs-4 col-md-6">
                    <h4 class="product-name">
                        <strong><%= item.product.name%></strong>
                    </h4>
                    <h4>
                        <small><%= item.product.description %></small>
                    </h4>
                </div>
                <div class="col-xs-6 col-md-4 row">
                    <div class="col-xs-6 col-md-6 text-right"style="padding-top: 5px">
                        <h6>
                            <strong>
                                <%= item.price%> 
                                <span class="text-muted">x</span>
                                <%= item.quantity %>
                            </strong>
                        </h6>
                    </div>
                    <div class="col-xs-4 col-md-4">
                        <%= link_to "Eliminar", cart_path(item), method: :delete, data: { confirm: 'Estas seguro que deseas eliminar este producto de tu carro de compras?' }%> 
                    </div>
                    
                    <div class="col-xs-2 col-md-2"></div>
                </div>
            </div>
            <hr>
        <% end %>
    </div>
    <div class="card-footer">
        <div class="pull-right" style="margin: 5px">
            Total: $<b><%= @order.total %></b>
        </div>
        <%= form_for :cart, url: pay_with_paypal_cart_path, method: :post do |f|  %> 
            <%= f.hidden_field :order_id, value: @order.id %>
            <%= f.submit 'Pagar orden' %>
        <% end %>    
    </div>
</div>